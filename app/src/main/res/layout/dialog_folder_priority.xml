<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/folder_priority_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin">

    <org.fossify.commons.views.MyTextInputLayout
        android:id="@+id/pattern_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/folder_name_contains">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/pattern_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_margin"
            android:singleLine="true"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/normal_text_size" />

    </org.fossify.commons.views.MyTextInputLayout>

    <org.fossify.commons.views.MyTextInputLayout
        android:id="@+id/priority_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/priority">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/priority_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_margin"
            android:inputType="number"
            android:singleLine="true"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/normal_text_size" />

    </org.fossify.commons.views.MyTextInputLayout>

    <RelativeLayout
        android:id="@+id/settings_use_english_holder"
        style="@style/SettingsHolderTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_margin"
            android:text="@string/prioritized_folders_desc" />

    </RelativeLayout>

</LinearLayout>
